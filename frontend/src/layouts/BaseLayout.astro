---
// src/layouts/BaseLayout.astro
import Header from '@/components/layout/Header.jsx';
import Footer from '@/components/layout/Footer.jsx';
import FloatingToggle from '@/components/common/FloatingToggle.jsx';
import '@/assets/styles/global.css';

const { title, bodyClass } = Astro.props;
---
<!doctype html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Vocal Academy Project" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class={bodyClass}>
    <div class="app-container">
      <Header client:only="react" />
      <main class="main-content">
        <slot />
      </main>
      <Footer client:only="react" />
      <FloatingToggle client:only="react" />
    </div>
    <style is:global>
      .app-container {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
      }
      
      /* 기본 스타일: 모든 페이지의 콘텐츠를 중앙 정렬 */
      .main-content {
        flex-grow: 1;
        max-width: 1200px;
        width: 100%;
        margin: 0 auto;
        padding: 2rem;
      }

      /* 홈페이지 예외: 중앙 정렬 및 패딩 제거 */
      body.homepage .main-content {
        max-width: none;
        margin: 0;
        padding: 0;
      }

      @media (max-width: 768px) {
        .main-content {
          padding: 1rem;
        }
        body.homepage .main-content {
          padding: 0;
        }
      }
    </style>
  </body>
</html>
